[Unit]
Description=Check if any service failed and then shut down the machine
After=multi-user.target network-online.target
Requires=multi-user.target
SuccessAction=exit
FailureAction=exit

[Service]
Type=oneshot
ExecStart=/usr/lib/systemd/mkosi-check-and-shutdown.sh
